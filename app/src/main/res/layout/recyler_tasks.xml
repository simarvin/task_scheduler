<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_bg_todaystask"
    android:orientation="vertical">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:background="@drawable/gradient_bg_todaystask">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/gradient_bg_todaystask"
                android:layout_margin="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/time_filled"
                        android:textSize="20sp"
                        android:layout_marginRight="7dp"
                        android:fontFamily="@font/tech_mono_regular"
                        android:textColor="#ffffff"/>
                    <TextView
                        android:id="@+id/hour_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  9"
                        android:textSize="20sp"
                        android:fontFamily="@font/tech_mono_regular"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/colon_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" : "
                        android:textSize="20sp"
                        android:fontFamily="@font/tech_mono_regular"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/minute_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 00 "
                        android:textSize="20sp"
                        android:fontFamily="@font/tech_mono_regular"
                        android:textColor="#ffffff"/>
                    <TextView
                        android:id="@+id/am_pm_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pm"
                        android:textSize="20sp"
                        android:fontFamily="@font/tech_mono_regular"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/task_desc_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     Break Time"
                        android:textSize="18sp"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="20dp"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        android:drawableLeft="@drawable/delete_icon"/>


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
